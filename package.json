{
    "name": "@taylux-ui/vue",
    "private": false,
    "version": "0.0.3",
    "type": "module",
    "description": "Créez des interfaces élégantes et performantes en quelques lignes de code",
    "keywords": [
        "vue",
        "vue3",
        "components",
        "ui-library",
        "typescript"
    ],
    "author": {
        "name": "Sebastien"
    },
    "license": "MIT",
    "main": "./dist/taylux.umd.js",
    "module": "./dist/taylux.es.js",
    "types": "./dist/types/ui/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/taylux.es.js",
            "require": "./dist/taylux.umd.js",
            "types": "./dist/types/ui/index.d.ts"
        },
        "./style.css": {
            "import": "./dist/assets/style.css",
            "require": "./dist/assets/style.css"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE.md"
    ],
    "sideEffects": [
        "**/*.css"
    ],
    "scripts": {
        "dev": "vite",
        "build": "npm run clean && vue-tsc -b && vite build",
        "preview": "vite preview",
        "clean": "rm -rf dist",
        "lint": "eslint .",
        "format": "prettier --write .",
        "typecheck": "tsc --noEmit",
        "validate": "npm run lint && npm run check-format && npm run type-check",
        "test": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "test:watch": "vitest watch",
        "prepublishOnly": "npm run build",
        "prepare": "husky"
    },
    "dependencies": {
        "vue": "^3.5.12"
    },
    "peerDependencies": {
        "vue": "^3.5.12"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.6.0",
        "@commitlint/config-conventional": "^19.6.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/user-event": "^14.5.2",
        "@testing-library/vue": "^8.1.0",
        "@types/node": "^22.9.0",
        "@typescript-eslint/parser": "^8.14.0",
        "@vitejs/plugin-vue": "^5.1.4",
        "@vitest/coverage-v8": "^2.1.5",
        "@vitest/ui": "^2.1.5",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.14.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-vue": "^9.31.0",
        "husky": "^9.1.7",
        "jsdom": "^25.0.1",
        "lucide-vue-next": "^0.460.0",
        "postcss": "^8.4.49",
        "prettier": "^3.3.3",
        "terser": "^5.36.0",
        "typescript": "~5.6.2",
        "vite": "^5.4.10",
        "vite-plugin-dts": "^4.3.0",
        "vitest": "^2.1.5",
        "vue-eslint-parser": "^9.4.3",
        "vue-tsc": "^2.1.8"
    },
    "publishConfig": {
        "access": "public"
    },
    "browserslist": [
        "last 2 versions"
    ],
    "engines": {
        "node": ">=18.0.0"
    }
}
